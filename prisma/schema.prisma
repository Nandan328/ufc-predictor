generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model FighterData {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  name      String        @unique
  nickname  String?
  tags      String[]
  division  String?
  win_lose  String?
  img       String?
  stats     FighterStat[] 
}

type FighterStat {
  stat String?
  num  String?
}
